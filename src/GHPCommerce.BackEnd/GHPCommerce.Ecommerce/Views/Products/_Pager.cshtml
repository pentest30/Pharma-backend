@model PagerViewModel<ProductModel>
<nav class="mb-4">
    @if (Model.Pager.EndPage > 1)
    {
        <ul class="pagination">
            @if (Model.Pager.CurrentPage > 1)
            {
                <li  class="page-item">
                    <a class="page-link" asp-action="Index">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index")?catalogId=@Model.Id&&page=@(Model.Pager.CurrentPage - 1)">Previous</a>
                </li>
            }
            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
            {
                <li  class="page-item">
                    <a class="page-link" href="@Url.Action("Index")?catalogId=@Model.Id&&page=@(Model.Pager.CurrentPage + 1)">Next</a>
                </li>
                <li  class="page-item">
                    <a class="page-link" href="@Url.Action("Index")?catalogId=@Model.Id&&page=@(Model.Pager.TotalPages)">Last</a>
                </li>
            }

            @for (var pageItem = Model.Pager.StartPage; pageItem <= Model.Pager.EndPage; pageItem++)
            {
                <li class="page-item @(pageItem == Model.Pager.CurrentPage ? "active" : "")">
                    <a class="page-link @(pageItem == Model.Pager.CurrentPage ?  "disabled" :"")" href="@Url.Action("Index")?catalogId=@Model.Id&&page=@pageItem">@pageItem</a>
                </li>
            }

           
        </ul>
    }
</nav>